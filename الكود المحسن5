4ï¸âƒ£ AccountFactory.java(Ù…Ù„Ù4)
  public class AccountFactory {
    public static Account createAccount(String owner, double balance, boolean premium) {
        if (premium) {
            return new PremiumAccount(owner, balance);
        }
        return new StandardAccount(owner, balance);
    }
}

