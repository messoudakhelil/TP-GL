  public class MainApp {
    public static void main(String[] args) {

        BankSystem bank = BankSystem.getInstance();

        bank.openAccount(AccountFactory.createAccount("Amine", 1000, false));
        bank.openAccount(AccountFactory.createAccount("Sara", 2000, true));

        bank.duplicateAccount("Sara");
        bank.printAccounts();
    }
}
  
