9ï¸âƒ£BankSystem.java(Ù…Ù„Ù9)
  import java.util.ArrayList;
import java.util.List;

public class BankSystem {
    private static BankSystem instance;
    private List<Account> accounts = new ArrayList<>();

    private BankSystem() {}

    public static BankSystem getInstance() {
        if (instance == null) {
            instance = new BankSystem();
        }
        return instance;
    }

    public void openAccount(Account account) {
        accounts.add(account);
        Logger.log("ØªÙ… ÙØªØ­ Ø­Ø³Ø§Ø¨ Ù„Ù„Ø²Ø¨ÙˆÙ† " + account.getOwner());
    }

    public Account findAccount(String owner) {
        for (Account acc : accounts) {
            if (acc.getOwner().equals(owner)) {
                return acc;
            }
        }
        return null;
    }

    public void duplicateAccount(String owner) {
        Account acc = findAccount(owner);
        if (acc != null) {
            Account copy = acc.clone();
            copy.owner = owner + "_copy";
            accounts.add(copy);
            Logger.log("ØªÙ… ØªÙƒØ±Ø§Ø± Ø§Ù„Ø­Ø³Ø§Ø¨");
        }
    }

    public void printAccounts() {
        System.out.println("=== Ø§Ù„Ø­Ø³Ø§Ø¨Ø§Øª ===");
        for (Account acc : accounts) {
            System.out.println(acc.getOwner() + " | " + acc.getBalance());
        }
    }
}


